{
  "manifest_version": 3,
  "name": "YouTools",
  "version": "1.0",
  "description": "Extension for YouTube",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.youtu.be/*"
  ],
  "action": {
    "default_popup": "youtools.html",
    "default_icon": "images/youtools-gray.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
